{
    "compilerOptions": {
      "outDir": "dist",
      "allowJs": false,
      "pretty": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "declaration": true,
      "baseUrl": "./src",
      "target": "es6",
      "module": "commonjs",
      "noImplicitAny": true,
      "removeComments": true,
      "allowUnreachableCode": true,
      "lib": [
        "es2015",
        "es2016",
        "es2017"
      ],
      "typeRoots": [
          "node_modules/@types"
      ]
    },
    "compileOnSave": false,
    "include": [
      "src"
    ]
  }
